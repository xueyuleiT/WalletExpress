<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@mipmap/register_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:src="@mipmap/register_t"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:paddingLeft="@dimen/public_space_value_5"
                android:paddingRight="@dimen/public_space_value_5"
                android:paddingTop="@dimen/public_space_value_5"
                android:paddingBottom="@dimen/public_space_value_5"
                android:gravity="center_vertical"
                android:background="@drawable/edt_bg"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="3">
                <ImageView
                    android:src="@mipmap/phone"
                    android:layout_width="22dp"
                    android:layout_height="22dp" />
                <com.express.wallet.walletexpress.view.ExtendClearEditText
                    android:hint="请输入您的手机号"
                    android:textSize="@dimen/public_textsize_value_14"
                    android:layout_marginLeft="@dimen/public_space_value_5"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/public_space_value_10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:paddingLeft="@dimen/public_space_value_5"
                android:paddingRight="@dimen/public_space_value_5"
                android:paddingTop="@dimen/public_space_value_5"
                android:paddingBottom="@dimen/public_space_value_5"
                android:gravity="center_vertical"
                android:background="@drawable/edt_bg"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="3">
                <ImageView
                    android:layout_marginLeft="@dimen/public_space_value_5"
                    android:src="@mipmap/pwd"
                    android:layout_width="15dp"
                    android:layout_height="22dp" />
                <com.express.wallet.walletexpress.view.ExtendClearEditText
                    android:hint="请输入您的验证码"
                    android:textSize="@dimen/public_textsize_value_14"
                    android:layout_marginLeft="@dimen/public_space_value_5"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/public_space_value_10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:paddingLeft="@dimen/public_space_value_5"
                android:paddingRight="@dimen/public_space_value_5"
                android:paddingTop="@dimen/public_space_value_5"
                android:paddingBottom="@dimen/public_space_value_5"
                android:gravity="center_vertical"
                android:background="@drawable/edt_bg"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="3">
                <ImageView
                    android:layout_marginLeft="@dimen/public_space_value_5"
                    android:src="@mipmap/recommond"
                    android:layout_width="15dp"
                    android:layout_height="15dp" />
                <com.express.wallet.walletexpress.view.ExtendClearEditText
                    android:hint="请输入您的邀请码(选填)"
                    android:textSize="@dimen/public_textsize_value_14"
                    android:layout_marginLeft="@dimen/public_space_value_5"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/public_space_value_10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <Button
                android:textSize="@dimen/public_textsize_value_18"
                android:textColor="@android:color/white"
                android:text="注册"
                android:background="@drawable/btn_next_r5"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="3"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>