<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar" />
    <LinearLayout
        android:orientation="vertical"
        android:background="@mipmap/register_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:src="@mipmap/register_t"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:paddingLeft="@dimen/public_space_value_5"
                android:paddingRight="@dimen/public_space_value_5"
                android:paddingTop="@dimen/public_space_value_5"
                android:paddingBottom="@dimen/public_space_value_5"
                android:gravity="center_vertical"
                android:background="@drawable/edt_bg"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4">
                <ImageView
                    android:src="@mipmap/phone"
                    android:layout_width="22dp"
                    android:layout_height="22dp" />
                <com.express.wallet.walletexpress.view.ExtendClearEditText
                    android:id="@+id/phone"
                    android:hint="请输入您的手机号"
                    android:inputType="phone"
                    android:digits="0123456789"
                    android:textColor="@color/T4"
                    android:textSize="@dimen/public_textsize_value_14"
                    android:layout_marginLeft="@dimen/public_space_value_3"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/public_space_value_10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:background="@drawable/edt_bg"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4">
                <ImageView

                    android:layout_marginLeft="@dimen/public_space_value_10"
                    android:src="@mipmap/pwd"
                    android:layout_width="14dp"
                    android:layout_height="22dp" />
                <com.express.wallet.walletexpress.view.ExtendClearEditText
                    android:id="@+id/edtMsgCode"
                    android:hint="请输入验证码"
                    android:textColor="@color/T4"
                    android:textSize="@dimen/public_textsize_value_14"
                    android:layout_marginLeft="@dimen/public_space_value_5"
                    android:background="@null"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tvMsgCode"
                    android:paddingLeft="@dimen/public_space_value_5"
                    android:paddingRight="@dimen/public_space_value_5"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/public_textsize_value_12"
                    android:text="获取验证码"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/msgcode_bg"/>
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/public_space_value_10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:paddingLeft="@dimen/public_space_value_5"
                android:paddingRight="@dimen/public_space_value_5"
                android:paddingTop="@dimen/public_space_value_5"
                android:paddingBottom="@dimen/public_space_value_5"
                android:gravity="center_vertical"
                android:background="@drawable/edt_bg"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4">
                <ImageView
                    android:layout_marginLeft="@dimen/public_space_value_4"
                    android:src="@mipmap/recommond"
                    android:layout_width="17dp"
                    android:layout_height="17dp" />
                <com.express.wallet.walletexpress.view.ExtendClearEditText
                    android:id="@+id/inviteCode"
                    android:hint="请输入您的邀请码(选填)"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:textColor="@color/T4"
                    android:textSize="@dimen/public_textsize_value_14"
                    android:layout_marginLeft="@dimen/public_space_value_5"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/public_space_value_10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <Button
                android:textSize="@dimen/public_textsize_value_18"
                android:textColor="@android:color/white"
                android:text="注册"
                android:background="@drawable/btn_next_r5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:id="@+id/register" />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/public_space_value_10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <CheckBox
                    android:id="@+id/checkbox"
                    android:button="@null"
                    android:layout_width="@dimen/public_space_value_20"
                    android:layout_height="@dimen/public_space_value_20"
                    android:background="@drawable/agreement_bg"/>
                <TextView
                    android:textSize="@dimen/public_textsize_value_14"
                    android:layout_marginLeft="@dimen/public_space_value_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="阅读并同意《简借注册协议》"
                    android:textColor="@android:color/white"
                    android:id="@+id/agreement" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="@dimen/public_space_value_10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="@dimen/public_space_value_0"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_weight="4">


                <ImageButton
                    android:layout_width="@dimen/public_space_value_20"
                    android:layout_height="@dimen/public_space_value_20"
                    android:src="@mipmap/advantage"/>
                <TextView
                    android:textSize="@dimen/public_textsize_value_14"
                    android:layout_marginLeft="@dimen/public_space_value_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="平台优势"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/public_space_value_10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:layout_weight="1.8">
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="@dimen/public_space_value_0"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_weight="4">


                <ImageView
                    android:background="@mipmap/bottom_1"
                    android:layout_width="@dimen/public_space_value_45"
                    android:layout_height="@dimen/public_space_value_45" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:background="@mipmap/bottom_2"
                    android:layout_width="@dimen/public_space_value_45"
                    android:layout_height="@dimen/public_space_value_45" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:background="@mipmap/bottom_3"
                    android:layout_width="@dimen/public_space_value_45"
                    android:layout_height="@dimen/public_space_value_45" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:background="@mipmap/bottom_4"
                    android:layout_width="@dimen/public_space_value_45"
                    android:layout_height="@dimen/public_space_value_45" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>


</LinearLayout>
